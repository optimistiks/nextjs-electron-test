{
  "name": "nextjstest",
  "version": "0.0.1",
  "main": "electron/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "next client",
    "build": "next build client",
    "start": "next start client",
    "electron-dev": "better-npm-run electron-dev",
    "electron-build": "better-npm-run electron-build",
    "electron-dist": "better-npm-run electron-dist"
  },
  "betterScripts": {
    "electron-dev": { 
      "command": "electron .",
      "env": {
        "NEXTJS_WEBPACK_TARGET": "electron-renderer"
      }
    },
    "electron-build": {
      "command": "next build client && next export client",
      "env": {
        "NEXTJS_WEBPACK_TARGET": "electron-renderer"
      }
    },
    "electron-dist": {
      "command": "npm run electron-build && build --mac tar.gz",
      "env": {
        "NEXTJS_WEBPACK_TARGET": "electron-renderer"
      }
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "app-root-path": "^2.1.0",
    "chance": "^1.0.16",
    "electron-is-dev": "^1.0.1",
    "electron-next": "^3.1.5",
    "firebase": "^5.5.4",
    "firebase-admin": "^6.0.0",
    "next": "^7.0.2",
    "quill": "^1.3.6",
    "quill-cursors": "^1.0.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "reconnecting-websocket": "^4.1.9",
    "rich-text": "^3.1.0",
    "sharedb": "^1.0.0-beta",
    "websocket-json-stream": "0.0.3",
    "ws": "^6.1.0"
  },
  "devDependencies": {
    "better-npm-run": "^0.1.1",
    "electron": "^3.0.4",
    "electron-builder": "^20.28.4"
  },
  "build": {
    "appId": "your.id",
    "mac": {
      "category": "your.app.category.type"
    }
  }
}
